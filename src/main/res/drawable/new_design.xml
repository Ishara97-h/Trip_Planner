<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#000056" android:startColor="#000056" />
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="#50000000" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="#192a56" android:startColor="#192a56" />
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="#40000000"/>
        </shape>

    </item>


</selector>