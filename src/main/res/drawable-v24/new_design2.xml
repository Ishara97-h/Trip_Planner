<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#e74c3c" android:startColor="#e74c3c" />
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="#50000000" />

        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="#c23616" android:startColor="#c23616" />
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="#c23616"/>
        </shape>

    </item>


</selector>